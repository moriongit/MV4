@using Cars.ViewModels.CarsVM
@model List<AutoAccessoryListItemVM>
@{
    ViewData["Title"] = "Index";
}
@section styles{
    <link href="~/admin/vendor/datatables/dataTables.bootstrap4.min.js" rel="stylesheet">
">
}
@section scripts{
    <script src="~/admin/js/demo/datatables-demo.js"></script>
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">AutoAccessories</h6>
        <a href="~/Admin/Car/Create" class="btn btn-outline-success">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>ImgUrl</th>
                        <th colspan="2">Action</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.ImgUrl</td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
